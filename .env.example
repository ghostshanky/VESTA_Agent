# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7

# Mock Mode (set to "true" to bypass LLM calls for demo)
MOCK_MODE=false

# Logging
LOG_LEVEL=INFO

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#feedback-reports

# Email Integration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@example.com
SENDER_PASSWORD=your-app-password
EMAIL_RECIPIENTS=team@example.com,product@example.com

# Notion Integration
NOTION_API_KEY=secret_your_notion_api_key
NOTION_DATABASE_ID=your_database_id

# Report Scheduler (Cron format: minute hour day month weekday)
# Default: Every Monday at 9 AM
REPORT_CRON=0 9 * * 1

# Frontend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000
